# Use official Go image as base
FROM golang:1.20 AS builder

# Set working directory inside the container
WORKDIR /app

# Copy the Go source code
COPY web-server-emulator.go .

# Build a statically linked binary to work in Alpine
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o web-server-emulator web-server-emulator.go

# Use a minimal base image for the final container
FROM alpine:latest

# Copy the static binary from the builder stage
COPY --from=builder /app/web-server-emulator /web-server-emulator

# Ensure the binary is executable
RUN chmod +x /web-server-emulator

# Run the program
# CMD ["/web-server-emulator"]
